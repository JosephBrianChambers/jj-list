<% results.forEach(function (post) { %>
  <div class='hit' data-id="<%= post.id %>">
    <div class='image-preview post-preview-single' style="background-image: url(<%= post.get("imageUrls")[0] %>);">
      <!-- <img src="<%= post.get("imageUrls")[0] %>"> -->
    </div>
    <div class="preview">
      <div class="inline-blk">
        <%= JST["_previewStar"]({postId: post.id})%>
        <span class='post-created-at'><%= post.escape("created_at")%></span>

        <span class='title-preview post-preview-single'><%= post.escape("title") %> </span>
      </div>
      <div class="inline-blk">
        <span class='price-preview post-preview-single'>$<%= post.escape("price") %></span>

        <span class='location-preview post-preview-single'> (<%= post.escape("location") %>)</span>
      </div>
    </div>
  </div>
<% }) %>




<!-- Button trigger modal -->
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->