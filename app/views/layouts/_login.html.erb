
  <div class="login-signup">
    <form class="navbar-right form-inline" action="<%= session_url %>" method="post">
      <input class="btn btn-default btn-xs" 
             type="submit" 
             value="Log In">
      <div class="form-group">
        <label class="sr-only" for="email">email</label>
        <input class="form-control input-sm jj-input-xs"
               type="text" 
               name="user[email]" 
               id="email" 
               placeholder="email">
      </div>
      <div class="form-group">
        <label class="sr-only" for="password">password</label>
        <input class="form-control input-sm jj-input-xs"
               type="password" 
               name="user[password]" 
               id="password" 
               placeholder="password">
      </div>
      <div class="form-group">
        <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
      </div>
      
      <div class="sign-up">
        <span id="sign-up-message">Not already a member?
          <a href="<%= new_user_url %>">Sign up!</a>
        </span>
      </div>
      
    </form>


  </div>
