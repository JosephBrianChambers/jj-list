
  <div class="login-signup pull-right">
    <form action="<%= session_url %>" method="post" accept-charset="utf-8">
      <input type="submit" value="Log In">
      <input type="text" name="user[email]" id="email" placeholder="email">
      <input type="password" name="user[password]" id="password" placeholder="password">
 
  
      <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
    </form>

    <div class="sign-up">
      <span id="sign-up-message">Not already a member?
        <a href="<%= new_user_url %>">Sign up!</a>
      </span>
    </div>
  </div>
